@model arkadaslar.Models.Post

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.preview)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.preview)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Context)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Context)
        </dd>

        @if (Model.Pictures.Any(f => f.PictureType == arkadaslar.Models.PictureType.Picture))
        {
            <dt>
                Image
            </dt>
            <dd>
                <img src="~/File?id=@Model.Pictures.First(f => f.PictureType == arkadaslar.Models.PictureType.Picture).Picture_Id" alt="avatar" height="200px" width="300px" />
            </dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.PostDateTime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PostDateTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedBy)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>






    </dl>
</div>

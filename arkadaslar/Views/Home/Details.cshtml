@model arkadaslar.Models.Post

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="dl-horizontal">

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>




        <dd>
            @Html.DisplayFor(model => model.Context)
        </dd>

        @if (Model.Pictures.Any(f => f.PictureType == arkadaslar.Models.PictureType.Picture))
        {
            
            <dd>
                <img src="~/File?id=@Model.Pictures.First(f => f.PictureType == arkadaslar.Models.PictureType.Picture).Picture_Id" alt="avatar" height="200px" width="300px" />
            </dd>
        }



        <dd>
            @Html.DisplayFor(model => model.PostDateTime)
        </dd>



        <dd>
            @Html.DisplayFor(model => model.CreatedBy)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
